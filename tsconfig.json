{
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "target": "es5",
    "lib": ["dom", "es2015"],
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": false
  },
  "include": ["src"],
  "exclude": ["stories", "**/*.stories.tsx"]
}
